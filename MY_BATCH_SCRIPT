#!/bin/bash

#SBATCH --job-name=test_pet_fine
#SBATCH --mem=100G
#SBATCH -t 80:50:00
#SBATCH --gres=gpu:nvidia_a100_80:1
#SBATCH --partition=tier1_gpu
#SBATCH --account=shinjini_kundu
#SBATCH --exclude=gpu02
#SBATCH --output=slurm-%A_haha.out
#SBATCH --error=slurm-%A_haha.err

module load cuda/11.3
module load cudnn/8.1.1

source /home/l.peiwang/miniconda3/etc/profile.d/conda.sh
eval "$(conda shell.bash hook)"

export PYTHONNOUSERSITE=1
ENV_NAME="pasta_env_new_2025"

# Check if env exists
conda env list | grep -q "$ENV_NAME"
ENV_EXISTS=$?

if [ $ENV_EXISTS -ne 0 ]; then
    echo "Conda environment '$ENV_NAME' does not exist. Creating it..."
    conda env create -n "$ENV_NAME" --file /home/l.peiwang/PASTA/requirements.yaml
else
    echo "Conda environment '$ENV_NAME' already exists. Skipping creation."
fi

# Activate
conda activate "$ENV_NAME"

# -- Force Re-Install TorchIO if not found --
python -c "import torchio" 2>/dev/null
if [ $? -ne 0 ]; then
    echo "TorchIO not found; installing now..."
    # If conda-forge doesnâ€™t conflict, you could do:
    # conda install -c conda-forge torchio -y
    # Otherwise:
    pip install torchio
fi
pip install \
    absl-py==1.4.0 \
    accelerate==0.18.0 \
    appdirs==1.4.4 \
    blobfile==2.0.2 \
    cachetools==5.3.1 \
    certifi==2022.12.7 \
    click==8.1.3 \
    colorama==0.4.6 \
    deprecated==1.2.13 \
    docker-pycreds==0.4.0 \
    einops==0.6.1 \
    ema-pytorch==0.2.3 \
    gitdb==4.0.10 \
    gitpython==3.1.31 \
    google-auth==2.19.1 \
    google-auth-oauthlib==1.0.0 \
    grpcio==1.54.2 \
    h5py==3.8.0 \
    humanize==4.6.0 \
    joblib==1.2.0 \
    lxml==4.9.2 \
    markdown==3.4.3 \
    markdown-it-py==2.2.0 \
    mdurl==0.1.2 \
    monai==1.1.0 \
    mpmath==1.2.1 \
    nibabel==5.1.0 \
    oauthlib==3.2.2 \
    packaging==23.1 \
    pandas==2.0.1 \
    pathtools==0.1.2 \
    protobuf==4.22.3 \
    psutil==5.9.5 \
    pyasn1==0.5.0 \
    pyasn1-modules==0.3.0 \
    pycryptodomex==3.17 \
    pygments==2.15.1 \
    python-dateutil==2.8.2 \
    pytorch-fid==0.3.0 \
    pytz==2023.3 \
    pyyaml==6.0 \
    requests-oauthlib==1.3.1 \
    rich==13.3.5 \
    rsa==4.9 \
    scipy==1.10.1 \
    sentry-sdk==1.21.0 \
    setproctitle==1.3.2 \
    shellingham==1.5.0.post1 \
    simpleitk==2.2.1 \
    smmap==5.0.0 \
    tensorboard==2.13.0 \
    tensorboard-data-server==0.7.0 \
    torchio==0.18.91 \
    tqdm==4.65.0 \
    typer==0.9.0 \
    tzdata==2023.3 \
    wandb==0.15.0 \
    werkzeug==2.3.4 \
    wrapt==1.15.0

# Run your script
python /home/l.peiwang/Master/PASTA/train_mri2pet.py \
    --data_dir /scratch/l.peiwang/hdf5_data_monash_fmri/ \
